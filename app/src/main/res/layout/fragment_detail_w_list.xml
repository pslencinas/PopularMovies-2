<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bdbdbd">


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="641dp"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context="com.example.android.popularmoviesist2.app.DetailFragment"
            android:background="#ffffff">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:id="@+id/imageView"
                android:focusableInTouchMode="false"
                android:contentDescription="Image"
                android:layout_below="@+id/title_text"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/title_text"
                android:fontFamily="sans-serif-condensed"
                android:textSize="38sp"
                android:textColor="@android:color/black"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:gravity="center_horizontal|top" />

            <TextView
                android:id="@+id/overview"
                android:fontFamily="sans-serif-condensed"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Overview"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_marginTop="22dp"
                android:layout_below="@+id/imageView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/overview_text"
                android:fontFamily="sans-serif-condensed"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/overview"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/average"
                android:fontFamily="sans-serif-condensed"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vote Average"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_below="@+id/title_text"
                android:layout_alignLeft="@+id/average_text"
                android:layout_alignStart="@+id/average_text" />

            <TextView
                android:id="@+id/average_text"
                android:fontFamily="sans-serif-condensed"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/average"
                android:layout_toRightOf="@+id/imageView"
                android:layout_toEndOf="@+id/imageView"
                android:layout_marginLeft="5dp" />

            <TextView
                android:id="@+id/release"
                android:fontFamily="sans-serif-condensed"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Release Date"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_below="@+id/average_text"
                android:layout_alignLeft="@+id/average_text"
                android:layout_alignStart="@+id/average_text"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/release_text"
                android:fontFamily="sans-serif-condensed"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/release"
                android:layout_toRightOf="@+id/imageView"
                android:layout_toEndOf="@+id/imageView"
                android:layout_marginLeft="5dp" />


            <ListView
                android:id="@+id/listViewTrailer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/overview_text"
                android:layout_alignRight="@+id/overview_text"
                android:layout_alignEnd="@+id/overview_text">
            </ListView>

            <TextView
                android:id="@+id/review"
                android:fontFamily="sans-serif-condensed"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Review"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_below="@+id/listViewTrailer"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/review_text"
                android:fontFamily="sans-serif-condensed"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/review"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageButton
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:id="@+id/imageButton"
                android:background="@drawable/add_favorite"

                android:layout_below="@+id/release_text"
                android:layout_alignLeft="@+id/release_text"
                android:layout_alignStart="@+id/release_text"
                android:layout_marginTop="20dp" />


        </RelativeLayout>


</ScrollView>